<div class="card-trip m-4">
  <div class="row row-cols-3 row-cols-lg-5 g-2 g-lg-3">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card">
          <div class="card-img-top">
            <% product.photos.each do |photo| %>
              <img src="<%= photo.url %>" class="card-img">
              <i class="fa-regular fa-heart position-absolute top-0 end-0 mt-2 me-2"></i>  <!-- If we decide to make a bookmark on click, will be used this '<i class="fa-solid fa-heart"></i>' -->
            <% end %>
          </div>
          <div class="card-body mb-2">
            <h2 class="card-title mb-2"><%= product.name %></h2>
            <p class="card-text mb-2"><%= truncate(product.description, length: 30, omission: "...", escape: false) %></p>
            <h2 class="card-trip-pricing mb-2"><%= product.price %>â‚¬</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

